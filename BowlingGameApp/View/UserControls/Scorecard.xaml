<UserControl x:Class="BowlingGameApp.View.UserControls.Scorecard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowlingGameApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1050">
    
    <Grid Height="100" Width="1050">
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Frame Numbers-->
        <Border BorderThickness="1" BorderBrush="Black" 
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="1"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="2"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="3"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="4"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="5"/>
