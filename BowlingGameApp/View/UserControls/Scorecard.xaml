        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="10" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="6"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="12" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="7"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="14" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="8"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="16" Grid.ColumnSpan="2">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="9"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="0" Grid.Column="18" Grid.ColumnSpan="3">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="10"/>
        </Border>
        
        <!--Frame Rolls-->
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Row="1" Grid.Column="0">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="#"/>
